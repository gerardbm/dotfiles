! ------------------------------------------------------------
! XFT
! ------------------------------------------------------------

Xft.dpi       : 96
Xft.antialias : true
Xft.hinting   : true
Xft.rgba      : rgb
Xft.autohint  : false
Xft.hintstyle : hintfull
Xft.lcdfilter : lcddefault

! ------------------------------------------------------------
! Variables
! ------------------------------------------------------------

! Atomic Space MC
#define base1 #11161B
#define base2 #171C22
#define base3 #67798B
#define base4 #91A8C1
#define acr50 #FF6C91
#define aco50 #C59700
#define acg50 #55B300
#define acc50 #00B1A4
#define acb50 #00A7F0
#define acv50 #EA65FF
#define acr70 #E58C9F
#define aco70 #C3A161
#define acg70 #78B560
#define acc70 #66B3AA
#define acb70 #6CACDF
#define acv70 #D38CE0

*.foreground  : base4
*.background  : base1
*.cursorColor : base4

*.color0  : base1
*.color1  : acr50
*.color2  : acg50
*.color3  : aco50
*.color4  : acb50
*.color5  : acv50
*.color6  : acc50
*.color7  : base3
*.color8  : base2
*.color9  : acr70
*.color10 : acg70
*.color11 : aco70
*.color12 : acb70
*.color13 : acv70
*.color14 : acc70
*.color15 : base4

! Manpage colors
*.colorIT : acr70
*.colorBD : acc70
*.colorUL : acb70

! Transparency not used
! URxvt*transparent: true
! URxvt*shading: 30
! URxvt*blurRadius: 50

! ------------------------------------------------------------
! URxvt
! ------------------------------------------------------------

URxvt*termName       : screen-256color
URxvt*font           : xft:Terminess Powerline:size=13,xft:TerminessTTF Nerd Font Mono
!
! Terminus italics are ugly, so I do not use them.
!
! URxvt*boldFont       : xft:Terminus:size=12:bold
! URxvt*italicFont     : xft:Terminus:size=12:italic
! URxvt*boldItalicFont : xft:Terminus:size=12:bold:italic
!
URxvt.keysym.C-M-1 : command:\033]710;xft:DejaVu Sans Mono for Powerline:size=11,xft:TerminessTTF Nerd Font Mono\007
URxvt.keysym.C-M-2 : command:\033]710;xft:Droid Sans Mono for Powerline:size=11,xft:TerminessTTF Nerd Font Mono\007
URxvt.keysym.C-M-3 : command:\033]710;xft:Roboto Mono for Powerline:size=11,xft:TerminessTTF Nerd Font Mono\007
URxvt.keysym.C-M-4 : command:\033]710;xft:Fira Mono for Powerline:size=11,xft:TerminessTTF Nerd Font Mono\007
URxvt.keysym.C-M-5 : command:\033]710;xft:Noto Mono for Powerline:size=11,xft:TerminessTTF Nerd Font Mono\007
! ---
URxvt.keysym.C-M-9 : command:\033]710;xft:Terminess Powerline:size=13,xft:TerminessTTF Nerd Font Mono\007
URxvt.keysym.C-M-0 : command:\033]710;xft:Terminess Powerline:size=13:bold,xft:TerminessTTF Nerd Font Mono\007

URxvt*letterSpace    : 0
URxvt*internalBorder : 1
URxvt*scrollBar      : false
URxvt*pointerBlank   : true
URxvt*hold           : false
URxvt*iso14755       : false
URxvt*iso14755_52    : false
URxvt*loginShell     : true
URxvt*buffered       : true
URxvt*depth          : 32
URxvt*foreground     : base4
URxvt*background     : base1
URxvt*borderColor    : base1
