#!/usr/bin/env python
"""Spanish dictionary"""

import csv
import sys
import os

WORD = sys.argv[1]
HOME = os.getenv('HOME')
FILE = HOME + '/.local/bin/def.d/esp.csv'

with open(FILE, newline='', encoding='utf-8') as f:
    reader = csv.reader(f, delimiter=',')
    for row in reader:
        if row[0] == WORD:
            definitions = row[1:]
            for definition in definitions:
                print(definition.replace('"', ''))
            break
    else:
        print(f"No se encontr√≥ la palabra '{WORD}' en el diccionario.")
